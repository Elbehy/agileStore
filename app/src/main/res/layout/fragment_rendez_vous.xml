<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.gallery.RendezVousFragment"
    android:background="@color/white">

    <EditText
        android:id="@+id/tv_date"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="420dp"
        android:hint="  Select Date"
        android:inputType="date"
        android:textSize="20dp"
        android:background="@drawable/custom_input_date_time"
        android:drawablePadding="12dp"
        android:ems="10"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/tv_heurs"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="-400dp"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="348dp"
        android:background="@drawable/custom_input_date_time"
        android:hint="Heure"
        android:textAlignment="center"
        android:textColorHint="#706A6A"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/tv_minutes"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="-400dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="348dp"
        android:background="@drawable/custom_input_date_time"
        android:hint=" Minute"
        android:textAlignment="center"
        android:textColorHint="#706A6A"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-400dp"
        android:layout_marginBottom="348dp"
        android:text="                      :"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-280dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#FFC107"
        android:text="confirmer"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:columnCount="1"
        android:rowCount="1">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="60dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/lnr_border"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ktiba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawablePadding="20dp"
                    android:text="Rendez-vous "
                    android:textColor="#6C6363"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wa9t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C6363"
                    android:textSize="50dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>



</RelativeLayout>