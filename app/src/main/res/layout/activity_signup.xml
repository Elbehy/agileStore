<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authenfication.signupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo3"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:hint="Nom et Prénom"
            android:inputType="text"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_person_icon"/>


        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:hint="Télèphone"
            android:inputType="phone"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_phone_icon"/>

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_lock_icon"/>


        <EditText
            android:id="@+id/coPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:hint="Confirmer mot de passe"
            android:inputType="textPassword"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_lock_icon"/>

        <Button
            android:id="@+id/signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFC107"
            android:text="sign up"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="compte existe déja !"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/deja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="connexion ?"
            android:textColor="#FF9800"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>